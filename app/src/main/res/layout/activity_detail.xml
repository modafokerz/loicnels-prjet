<ch.nelson.appdev.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <View style="@style/text_divider" />


        <TextView
            style="@style/text"
            android:id="@+id/detailPseudoEscort"
            android:text="Peneloppe"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/detailVilleEscort"
            android:text="Lausanne"
            android:textSize="15dp" />

        <View style="@style/text_divider" />

        <TextView
            style="@style/text"
            android:text="Details"
            android:id="@+id/dp_details_text"/>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            app:columnCount="2">

            <TextView
                android:id="@+id/detailCorpulenceEscort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corpulence : "
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/detailTailleEscort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taille : "
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/detailAgeEscort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age : "
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/detailCheveuxEscort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheveux : "
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/detailOrigineEscort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origine : "
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/detailYeuxEscort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeux : "
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

        </android.support.v7.widget.GridLayout>

        <View style="@style/text_divider" />

        <TextView
            style="@style/text"
            android:text="Services"
            android:id="@+id/dp_services_text"/>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/gridLayoutService"
            app:columnCount="2">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

        </android.support.v7.widget.GridLayout>

        <View style="@style/text_divider" />


        <TextView
            style="@style/text"
            android:text="Langues Parlées"
            android:id="@+id/dp_language_text"/>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            app:columnCount="2"
            android:paddingBottom="5dp"
            android:id="@+id/gridLayoutLangue" >

        </android.support.v7.widget.GridLayout>

        <View style="@style/text_divider" />

        <TextView
            style="@style/text"
            android:text="Tarif"
            android:padding="10dp"
            android:id="@+id/dp_prix_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:text="110 CHF / H"
            android:textSize="15dp" />

        <Button
            android:id="@+id/dp_btn_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réserver"/>


    </LinearLayout>

</ch.nelson.appdev.CustomScrollView>